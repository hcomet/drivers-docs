    padding: 1rem;
    border-left: 1px solid var(--sl-color-gray-5);
    margin-left: 1.5rem;
  }
  .starlight-right-sidebar-title {
    font-size: 1.2em;
    margin-bottom: 1rem;
  }
  .starlight-right-sidebar ul {
    list-style: none;
    padding: 0;
  }
  .starlight-right-sidebar li {
    margin-bottom: 0.5rem;
  }
</style>
