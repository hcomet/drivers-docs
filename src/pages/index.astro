---
import { getCollection } from "astro:content";
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";
import { CATEGORIES } from "../config/categories";
import { slugify } from "../utils/slugify";

const allDrivers = await getCollection("docs");

// Build set of categories that have drivers
const activeCategorySet = new Set<string>();

for (const driver of allDrivers) {
  const driverId = driver.id;
  const driverParts = driverId.split("/");

  if (driverParts.length >= 3) {
    // Get categories from driver data
    if (driver.data.categories && Array.isArray(driver.data.categories)) {
      driver.data.categories.forEach((cat: string) => {
        activeCategorySet.add(slugify(cat));
      });
    }
  }
}

// Filter categories to only those with drivers
const categories = Object.entries(CATEGORIES)
  .filter(([slug]) => activeCategorySet.has(slug))
  .sort((a, b) => a[1].localeCompare(b[1]));
---

<StarlightPage
  frontmatter={{
    title: "Driver Categories",
    template: "splash",
  }}
>
  <div class="category-grid">
    {
      categories.map(([slug, name]) => (
        <a href={`/${slug}`} class="category-box">
          <img
            src={`/images/categories/${slug}.webp`}
            alt={`${name} category thumbnail`}
            class="category-thumbnail"
          />
          <h2>{name}</h2>
        </a>
      ))
    }
  </div>
</StarlightPage>

<style>
  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
    justify-content: center;
  }

  .category-box {
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.75rem;
    padding: 0.5rem;
    background-color: var(--sl-color-gray-6);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    text-decoration: none;
    color: inherit;
    box-shadow: var(--sl-shadow-sm);
    transition: all 0.2s ease-in-out;
  }

  .category-box:hover {
    background-color: var(--sl-color-gray-5);
    transform: translateY(-5px);
    box-shadow: var(--sl-shadow-md);
  }

  .category-thumbnail {
    width: 100px;
    height: 100px;
    object-fit: contain;
    margin-bottom: 0.5rem;
  }

  .category-box h2 {
    margin-top: 0.5rem;
    margin-bottom: 0.75rem;
    color: var(--sl-color-white);
    font-size: 1.5rem;
  }

  .category-box p {
    font-size: 1rem;
    color: var(--sl-color-gray-2);
    margin-bottom: 0.5rem;
    line-height: 1.5;
  }
</style>
